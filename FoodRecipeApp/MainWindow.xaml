                <Image Source="Images/menuImage.png" Width="20" Margin="10,0"></Image>
            </Button>
            <Button Height="40" Name="HomeButton" Click="HomeButton_Click" BorderThickness="0" HorizontalContentAlignment="Left" Padding="0,1,1,1">
                <WrapPanel>
                    <TextBlock Width="5" Height="40" Background="Red"></TextBlock>
                    <Image Source="Images/homeImage.png" Width="20" Margin="10,0"></Image>
                    <TextBlock VerticalAlignment="Center" Width="153" FontSize="15">Home</TextBlock>
                </WrapPanel>
            </Button>
            <Button Height="40" Name="FavoriteButton" Click="FavoriteButton_Click" BorderThickness="0" HorizontalContentAlignment="Left">
                <WrapPanel>
                    <TextBlock Width="5" Height="40"></TextBlock>
                    <Image Source="Images/favoriteImage.png" Width="20" Margin="10,0"></Image>
                    <TextBlock VerticalAlignment="Center" Width="153" FontSize="15">Favorite</TextBlock>
                </WrapPanel>
            </Button>
            <Button Height="40" Name="AddDishButton" Click="AddDishButton_Click" BorderThickness="0" HorizontalContentAlignment="Left">
