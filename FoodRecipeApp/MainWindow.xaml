                    <TextBlock Width="5" Height="40"></TextBlock>
                    <Image Source="Images/addImage.png" Width="20" Margin="10,0"></Image>
                    <TextBlock VerticalAlignment="Center" Width="153" FontSize="15">Add</TextBlock>
                </WrapPanel>
            </Button>
            <Button Height="40" Name="IngredientButton" Click="IngredientButton_Click" BorderThickness="0" HorizontalContentAlignment="Left">
                <WrapPanel>
                    <TextBlock Width="5" Height="40"></TextBlock>
                    <Image Source="Images/IngredientImage.png" Width="20" Margin="10,0"></Image>
                    <TextBlock VerticalAlignment="Center" Width="153" FontSize="15">Ingredient</TextBlock>
                </WrapPanel>
            </Button>
        </StackPanel>
        <DockPanel Name="TypeBar" Height="40" DockPanel.Dock="Top" LastChildFill="True">
            <StackPanel Margin="15,0,0,0" Orientation="Horizontal" Width="590" DockPanel.Dock="Left">
                <Button Height="40" Width="120" x:Name="AllButton" Click="AllButton_Click" BorderThickness="0" Content="All"/>
                <Button Height="40" Width="120" x:Name="FoodButton" Click="FoodButton_Click" BorderThickness="0" Content="Food"/>
                <Button Height="40" Width="120" x:Name="DrinksButton" Click="DrinksButton_Click" BorderThickness="0" Content="Drinks"/>
            </StackPanel>
            <StackPanel DockPanel.Dock="Right">
